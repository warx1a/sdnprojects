package com.snoopdogg.pathfinding;

import java.util.LinkedList;

public class Piece {
	private int x;
	private int y;
	
	private LinkedList<Piece> piecelist = new LinkedList<>();
	private LinkedList<Piece> obstaclelist = new LinkedList<>();
	
	public Piece(int x, int y) {
		this.x = x;
		this.y = y;
	}
	
	public int getX() {
		return x;
	}
	
	public int getY() {
		return y;
	}
	public boolean isEdge() {
		return new Piece(x+1,y) == null || new Piece(x-1,y) == null || new Piece(x,y=1) == null ||
				new Piece(x,y-1) == null;
	}
	public void getAdjacent() {
		
	}
	public boolean isValid(Piece p) {
		return p != null && !obstaclelist.contains(p);
	}
}
