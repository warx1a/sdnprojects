package statestudios;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.ArrayList;

import javax.swing.ComboBoxModel;
import javax.swing.JComboBox;
import javax.swing.JFrame;
import javax.swing.JPanel;

public class HelpPage {
	
	private JFrame frame = new JFrame();
	private JPanel panel = new JPanel();
	private ArrayList<String> methods = new ArrayList<>();
	public void init() {
		methods.add("None");
		methods.add("Dog");
		methods.add("Cat");
		frame.setSize(500,500);
		panel.setSize(frame.getSize());
		frame.setName("API Menu Helper");
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setVisible(true);
		final JComboBox mainMethod = new JComboBox((ComboBoxModel) methods);
		mainMethod.addActionListener(new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
				mainMethod.getSelectedItem().toString();
				
			}
			
		});
		panel.add(mainMethod);
		frame.add(panel);
		
	}

}
